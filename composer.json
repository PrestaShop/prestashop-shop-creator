{
  "name": "prestashop/shop-generator",

  "require": {
    "php": ">=8.0",
    "ext-SimpleXML": "*",
    "doctrine/inflector": "^2.0",
    "fakerphp/faker": "^1.13",
    "incenteev/composer-parameter-handler": "^2.1",
    "mossadal/math-parser": "^1.3",
    "symfony/console": "^6.2",
    "symfony/error-handler": "^6.2",
    "symfony/filesystem": "^3.4|^4.4|^5.4",
    "symfony/finder": "^3.4|^4.4|^5.4",
    "symfony/options-resolver": "^6.2",
    "symfony/serializer": "^4.4",
    "symfony/yaml": "^3.4|^4.4|^5.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6.3",
    "phpstan/phpstan": "^1.9",
    "friendsofphp/php-cs-fixer": "^3.14",
    "symfony/var-dumper": "^6.2",
    "symfony/debug": "^4.4"
  },
  "autoload": {
    "psr-4": {
      "ShopGenerator\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
    ],
    "post-update-cmd": [
      "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
    ]
  },
  "extra": {
    "incenteev-parameters": {
      "file": "app/config/config.yml",
      "parameter-key": "parameters"
    },
    "patches": {
      "fakerphp/faker": {
        "Make image provider works again": "./patches/faker-provider-image.patch"
      }
    },
    "composer-exit-on-patch-failure": true
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "cweagans/composer-patches": true
    }
  }
}
